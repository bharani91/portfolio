<%= nested_form_for([:admin, @project], html: { multipart: true }) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  
  <div class="field">
    <%= f.label :tag_list, "Tags" %><br />
    <%= f.text_field :tag_list %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  
  <%= f.fields_for :photos do |image_form| %>
    <%= image_form.label :image %>
    <%= image_form.file_field :image %>


    <%= image_form.link_to_remove "Remove this job" %>
  <% end %>
  <p><%= f.link_to_add "Add a task", :photos %></p>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
