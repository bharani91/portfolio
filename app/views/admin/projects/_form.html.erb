<%= nested_form_for([:admin, @project], html: { multipart: true }) do |f| %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>

      <ul>
      <% @project.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title, class:"eight columns centered" %>
    <%= f.text_field :title, class:"eight columns centered" %>
  </div>
  
  <div class="field">
    <%= f.label :tag_list, "Tags", class:"eight columns centered" %>
    <%= f.text_field :tag_list, class:"eight columns centered" %>
  </div>
  
  <%= f.fields_for :photos do |image_form| %>
  <div class="field clearfix eight columns centered">
    <%= image_form.label :image %>
    <%= image_form.file_field :image, class:"eight columns" %>
  


    <%= image_form.link_to_remove "Remove this photo", class:"remove_link two columns" %>
    </div>
  <% end %>
  <p><%= f.link_to_add "Add a photo", :photos, class:"add_link eight columns centered" %></p>
  
  <div class="field">
    <%= f.label :description, class:"eight columns centered" %>
    <%= f.text_area :description, class:"eight columns centered" %>
  </div>
  
  
  
  <div class="actions two columns centered">
    <%= f.submit class:"nice big blue button"  %>
  </div>
<% end %>
